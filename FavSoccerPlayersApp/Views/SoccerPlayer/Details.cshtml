@model FavSoccerPlayersApp.Entities.SoccerPlayer

@{
    ViewBag.Title = "Player Details";
}

<h1 class="display-4 text-primary">@Model.Name</h1>

<div class="card mt-4">
    <div class="card-body">
        <h5 class="card-title">Player Information</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Number</dt>
            <dd class="col-sm-9">@Model.Number</dd>

            <dt class="col-sm-3">Team</dt>
            <dd class="col-sm-9">@Model.Team</dd>

            <dt class="col-sm-3">Previous Teams</dt>
            <dd class="col-sm-9">@Model.PreviousTeams</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a>
    <a asp-action="Index" class="btn btn-info btn-sm">Show All Players</a>
    <a asp-action="Create" class="btn btn-primary btn-sm">Add Player</a>
</div>

<style>
    .btn {
        transition: none;
    }
</style>
