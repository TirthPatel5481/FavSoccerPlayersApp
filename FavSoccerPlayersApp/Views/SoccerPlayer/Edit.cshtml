@model FavSoccerPlayersApp.Entities.SoccerPlayer

@{
    ViewBag.Title = "Edit Player";
}

<div class="container mt-5">
    <h1 class="mb-4">Edit Player</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Number" class="form-label"></label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Team" class="form-label"></label>
            <input asp-for="Team" class="form-control" />
            <span asp-validation-for="Team" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="PreviousTeams" class="form-label"></label>
            <input asp-for="PreviousTeams" class="form-control" />
            <span asp-validation-for="PreviousTeams" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-start gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
